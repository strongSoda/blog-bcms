<head>
    <% include templates/postHead.ejs%>
</head>
<% include templates/postHeader.ejs%>


    <div class="container main">
      <div class="col-sm-12">  
        <h2 style="font-family:'kanit',sans-serif">
            <%= post.title %>
        </h2>

        Published
        <%= published.getDate() %>/
            <%= published.getMonth()+1 %>/
                <%= published.getFullYear() %>

                    <% if (post.categories.length > 0) { %>
                        in
                        <% post.categories.forEach(function(cat) { %>
                            <span class="text-center">
                                <a href="/category/<%= cat.slug %>">
                                    <%= cat.name %>
                                </a>
                            </span>
                            <% }); %>
                                <% } %>

                                    <br>

                                   <span style="color:gray;font-family:'kanit',sans-serif"><img style="max-height:45px;"
                                    src="<%= post.author.profile_image%>" alt="Author image"> 
                                    Author: <%= post.author.first_name %> <%= post.author.last_name %> <a href="<%= post.author.linkedin_url %>" target=blank rel=noopener><i class="fab fa-linkedin"></i></a>
                                    </span>    

                                        <br><br>

                                            <div style="font-family:'kanit',sans-serif">
                                                <%- post.body %>
                                            </div>
                                         </div>
                                       </div>
                                                <% include templates/postFooter.ejs%>